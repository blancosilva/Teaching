\noindent{\large\bf MATH 242}\hfill{\large\bf Second Midterm.}\hfill{\large\bf
  Spring 2012}\hfill{\large\bf Page 2/4}\hrule

\bigskip
{\problem[10 pts] \em Find the equilibria for the autonomous differential equation below, and use a slope field to determine the stability}
\vspace{1.5cm}
\begin{center}
\begin{tikzpicture}
\draw (-1,0) -- (4,0);
\draw (0,-1) -- (0,4);
\foreach \x in {-0.5,0,0.5,1,1.5,2,2.5,3,3.5}
\foreach \y in {-0.5,0,0.5,1,1.5,2,2.5,3,3.5}
\draw (\x,\y) circle (1pt);
\end{tikzpicture}
\end{center}

\begin{flushright}
  \begin{tikzpicture}
    \draw (0cm,-0.2cm) rectangle (5cm,1.2cm);
  \end{tikzpicture}
\end{flushright}
\hrule
{\problem[10 pts] \em Solve the initial value problem}
\begin{equation*}
\frac{dy}{dx} = \frac{1}{\sqrt{x+2}}\qquad y(2)=-1
\end{equation*}

\vspace{2.5cm}
\begin{flushright}
  \begin{tikzpicture}
    \draw (0cm,-0.2cm) rectangle (5cm,1.2cm);
  \end{tikzpicture}
\end{flushright}
\hrule

{\problem[15 pts] \em Find an {\bf explicit} general solution of the differential
  equation}
\begin{equation*}
2\sqrt{x} \frac{dy}{dx} = \sqrt{1-y^2}
\end{equation*}
\vspace{3.5cm}
\begin{flushright}
  \begin{tikzpicture}
    \draw (0cm,-0.2cm) rectangle (5cm,1.2cm);
  \end{tikzpicture}
\end{flushright}
Indicate at least one singular solution of this equation.
\begin{flushright}
  \begin{tikzpicture}
    \draw (0cm,-0.2cm) rectangle (5cm,1.2cm);
  \end{tikzpicture}
\end{flushright}
